{
    "C_Cpp.default.cppStandard": "c++17",
    "files.exclude": {
        "**/.git": true,
        "*.o": true
    },
    "editor.formatOnSave": true,
    "clang-format.style": "{BasedOnStyle: Google, IndentWidth: 4, BreakBeforeBraces: Linux, AccessModifierOffset: -4}",
